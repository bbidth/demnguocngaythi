<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đồng hồ đếm ngược</title>
    <style>
        #countdown {
            font-family: sans-serif;
            font-size: 36px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div id="countdown"></div>

    <script>
        // Thiết lập ngày và giờ kết thúc (tính bằng mili giây)
        const endDate = new Date('2024-07-04T00:00:00+07:00');

        // Lấy thời gian hiện tại
        const now = new Date();

        // Tính toán thời gian còn lại (tính bằng mili giây)
        let diff = endDate.getTime() - now.getTime();

        // Cập nhật đồng hồ đếm ngược mỗi giây
        const updateCountdown = function() {
            diff -= 1000; // Giảm 1 giây mỗi lần cập nhật

            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
            const minutes = Math.floor((diff / (1000 * 60)) % 60);
            const seconds = Math.floor((diff / 1000) % 60);

            // Hiển thị thời gian còn lại
            document.getElementById('countdown').innerHTML = `${days} ngày ${hours} giờ ${minutes} phút ${seconds} giây`;

            // Kiểm tra xem thời gian đã hết hay chưa
            if (diff <= 0) {
                diff = endDate.getTime() - now.getTime(); // Khởi động lại đồng hồ đếm ngược
            }

            // Cập nhật lại đồng hồ đếm ngược sau 1 giây
            setTimeout(updateCountdown, 1000);
        };

        // Bắt đầu đếm ngược
        updateCountdown();
    </script>
</body>
</html>
